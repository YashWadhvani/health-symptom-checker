rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all_clinics collection
    match /all_clinics/{clinicId} {
      allow read: if true;  // Anyone can read clinic data
      allow write: if false;  // No one can modify clinic data
    }
    
    // Allow authenticated users to read/write their own symptom documents
    match /users/{userId}/symptoms/{symptomId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write their own user profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule - deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}